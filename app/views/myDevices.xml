<Alloy>
	<Collection src="myDevices" />
	<Window class="container">
		<Label top="10dp">My Devices</Label>
		<View id="mainView" layout="horizontal" >
		<TableView id="myDevicesTable" dataCollection="myDevices">
                <TableViewRow layout="horizontal" deviceId="{deviceId}">
                	<ImageView image="{deviceImage}" width="25%" />
	                <Label text="{deviceName}" width="25%" />
					<Label text="{deviceId}" width="25%"/>
					<Label text="{devicestatus}" width="25%"/>
                </TableViewRow>                
        </TableView>
		</View>
        <Button id="closeBtn" title="Back"/>

	</Window>
                        	 	
</Alloy>
